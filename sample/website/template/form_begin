[%- DEFAULT method = 'POST';
    form_url = OI.make_url( BASE   = BASE,
                            ACTION = ACTION,
                            TASK   = TASK ); -%]
<form action="[% form_url %]" method="[% method %]"
      [%- IF onsubmit %] onsubmit="[% onsubmit %]"[% END -%]
      [%- IF name %] name="[% name %]"[% END -%]
      [%- IF upload == 'yes' %]enctype="multipart/form-data"[% END %]>